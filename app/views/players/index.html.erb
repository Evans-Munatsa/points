<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Player</th>
        <th>Assasin Points</th>
        <th>Noob points</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <% @players.each do |player| %>
        <tr>
        <td>
          <h4><%= link_to player.name, player %></h4>
        </td>
        <td>
          <h4><%= link_to player.assassin %></h4>
        </td>
        <td>
          <h4><%= link_to player.noob %></h4>
        </td>
         </tr>
        <% end %>  
     
    </tbody>
  </table>
</div>
<hr>
<div>
  <%= render 'form' %>
</div>